{
    "name": "edex-ui",
    "displayName": "eDEX-UI Theme",
    "description": "A TRON-inspired theme for VS Code",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Themes",
        "Other"
    ],
    "activationEvents": [
        "onCommand:edex-ui.openTerminal",
        "onCommand:edex-ui.openWidgets"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "edex-ui.openTerminal",
                "title": "eDEX-UI: Open Terminal"
            },
            {
                "command": "edex-ui.openWidgets",
                "title": "eDEX-UI: Open System Widgets"
            }
        ],
        "themes": [
            {
                "label": "eDEX-UI",
                "uiTheme": "vs-dark",
                "path": "./themes/tron-theme.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "xvfb-run -a node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "eslint": "^8.28.0",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "typescript": "^4.9.3",
        "@vscode/test-electron": "^2.2.0"
    },
    "dependencies": {
        "systeminformation": "^5.11.9",
        "chart.js": "^3.7.0"
    }
}
